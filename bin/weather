#!/bin/sh
#
# weather - weather forecast
# https://github.com/chubin/wttr.in
#

usage() {
  cat <<EOF
Usage: $(basename "${0}") [option]

  -l, --location  return weather for location (default: Luxembourg,Luxembourg)

  -h, --help      display this help message and exit
EOF
}

query() {
  CURL=$(which curl)

  if ! RESPONSE=$("${CURL}" --disable --fail --silent --compressed https://wttr.in/${LOCATION:-Luxembourg,Luxembourg}?2nqmF); then
    echo "$(basename "${0}"): check your internet connection and try again"
    exit 1
  fi

  echo "${RESPONSE}"

  unset CURL
  unset RESPONSE
}

while true; do
  case "${1-}" in
    "-h"|"--help")
      usage
      exit 0
      ;;
    "-l"|"--location")
      LOCATION="${2-}"
      shift
      ;;
    -?*)
      echo "$(basename "${0}"): Invalid option ${1}"
      echo "Try '$(basename "${0}") -h' for more information."
      exit 1
      ;;
    *)
      query "$@"
      exit 0
      ;;
  esac
  shift
done